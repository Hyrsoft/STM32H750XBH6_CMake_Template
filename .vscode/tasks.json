{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "buildType",
            "type": "pickString",
            "description": "Please select the build type to use",
            "options": [
                "Debug",
                "Release"
            ],
            "default": "Debug"
        }
    ],
    "tasks": [
        {
            "label": "ðŸ”§ Configure",
            "type": "shell",
            "detail": "Configure CMake build environment",
            "command": "cmake",
            "args": [
                "--preset",
                "${input:buildType}"
            ],
            "group": "build",
        },
        {
            "label": "ðŸ”¨ Build",
            "type": "shell",
            "detail": "Generated task for building the project",
            "command": "cmake",
            "args": [
                "--build",
                "--preset",
                "${input:buildType}"
            ],
            "group": {
                "kind": "build",
            },
            "dependsOn": "ðŸ”§ Configure",
        },
        {
            "label": "ðŸ“¥ Flash",
            "type": "shell",
            "detail": "Build and flash the binary to the target device using pyOCD",
            "command": "pyocd",
            "args": [
                "flash",
                "--target",
                "stm32h750xx",
                "-O",
                "connect_mode=under-reset",
                "./build/${input:buildType}/STM32H750XBH6_Template.bin@0x90000000"
            ],
            "group": "build",
        },
        {
            "label": "ðŸ§¹ Clean",
            "type": "shell",
            "detail": "Clean the build file",
            "command": "bash",
            "args": [
                "-c",
                "rm -rf build"
            ],
            "group": "build",
        },
        {
            "label": "ðŸ§¹ -> ðŸ”¨",
            "detail": "Full Workflow: Clean, Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean",
                "Build",
            ],
            "group": "build",
        },
        {
            "label": "ðŸ§¹ -> ðŸ”¨ -> ðŸ“¥",
            "detail": "Full Workflow: Clean, Build and Flash using pyOCD",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean",
                "Build",
                "Flash"
            ],
            "group": "build",
        },
    ]
}